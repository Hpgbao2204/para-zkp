{
  "name": "@acala-network/chopsticks-core",
  "version": "1.0.2",
  "author": "Acala Developers <hello@acala.network>",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=v20"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "yarn clean && ../../package-build.sh",
    "docs:prep": "typedoc",
    "depcheck": "npx depcheck"
  },
  "dependencies": {
    "@acala-network/chopsticks-executor": "1.0.2",
    "@polkadot/rpc-provider": "^15.0",
    "@polkadot/types": "^15.0",
    "@polkadot/types-codec": "^15.0",
    "@polkadot/types-known": "^15.0",
    "@polkadot/util": "^13.2",
    "@polkadot/util-crypto": "^13.2",
    "comlink": "^4.4.2",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "lru-cache": "^11.0.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@swc/cli": "0.5.2",
    "@swc/core": "^1.10.1",
    "@types/lodash": "^4.17.13",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist/esm/**",
    "dist/cjs/**"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "browser": {
    "./dist/cjs/wasm-executor/node-worker.js": "./dist/cjs/wasm-executor/browser-worker.js",
    "./dist/esm/wasm-executor/node-worker.js": "./dist/esm/wasm-executor/browser-worker.js"
  }
}